@using PCMarket.Models.ViewModels.News
@model SoftwareNewViewModel
@{
    ViewBag.Title = "Software News";
}

<div class="container">
    <div class="row">
        <div class="center-block col-md-6 col-md-push-3">
            <h1 class="text-danger text-capitalize">@Model.Title</h1>
        </div>
    </div>
    
    <div class="col-md-10">
        <p class="text-right text-info">@Model.Subject</p>
    </div>
    <div class="row">
        <div class="col-md-9 col-md-push-1">
            <p class="text-justify">@Model.Body</p>
        </div>
    </div>
</div>