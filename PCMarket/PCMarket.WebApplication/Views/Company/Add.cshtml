@using PCMarket.Models.BindingModels
@model CompanyBindingModel
@{
    ViewBag.Title = "Add Company";
}

<h2>Add Company</h2>
@using (Html.BeginForm("Add", "Company", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add new company.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container" id="company-container">
        <div class="row">
            <div class="col-md-10">
                <dl class="dl-horizontal">
                    <dt>@Html.LabelFor(m => m.CompanyName, new { @class = "col-md-2 control-label" })</dt>
                    <dd>@Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })</dd>
                    <dt>@Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })</dt>
                    <dd>@Html.TextAreaFor(m => m.Description, new { rows = "5", @class = "form-control" })</dd>
                    <dt>@Html.LabelFor(m => m.EstablishOn, new { @class = "col-md-2 control-label" })</dt>
                    <dd>@Html.TextBoxFor(m => m.EstablishOn, "ShortTime", new { type = "date", @class = "date-picker form-control" })</dd>
                    <dt>@Html.LabelFor(m => m.LogoImageUrl, new { @class = "col-md-2 control-label" })</dt>
                    <dd>@Html.TextBoxFor(m => m.LogoImageUrl, new { @class = "form-control", id = "logo-image-url" })</dd>
                    <dt></dt>
                    <dd><input type="submit" class="btn btn-default" value="Add Company" /></dd>
                </dl>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}